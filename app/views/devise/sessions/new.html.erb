 <div class="form-wrap">
  <p class="heading2 text-center">Login</p>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <div class="hr"></div>
      <br>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <div class="hr"></div>
    </div>

    <div class="form-actions mt-4">
      <%= f.button :submit, "Log in", class: "form-button " %>
    </div>
  <% end %>
  <br>
  <%= render "devise/shared/links", class: "text-dark"  %>
</div>