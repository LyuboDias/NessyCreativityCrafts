<div class="container px-6">
  <div class="my-6">
    <p class="heading2 text-center my-6 text-3xl"><%= @category.title%> (<%=  @category.products.count %>)</p>
    <div class="hr "></div> 
  </div>
  <br>
  <div class="flex flex-wrap justify-center">
    <% @products.each do |product| %> 
      <%= link_to category_product_path(@category.id, product.id), class: 'hover:no-underline hover:text-purple-800 md:w-1/4 w-2/5  md:mx-3 mx-1' do %> 
      <%# <div class="  "> %>
        <div class=" box-shadow shadow-md md:py-6 py-2 px-2 lg:px-12 my-6 " > 
        <%= image_tag product.photo_1, class: 'product-image ', alt: 'imageeee' %>
          <%# <div class="product-card"> %>
            <h5 class="text-center mt-2 text-2xl"><%= product.title %></h5>  
            <strong><h4 class="text-center text-2xl"><%= humanized_money_with_symbol(product.price) %></h4> </strong> 
          <%# </div> %>
        </div> 
      <%# </div> %>
      <% end %>
    <% end %>
  </div>
  <div class=" d-flex justify-content-between">
    <p class="text-center mt-5">  <%= link_to "Back", categories_path, class: "btn-lg form-button" %></p>
    <p class="text-center mt-5">  <%= link_to "Checkout", cart_path, class: "btn-lg form-button"%></p>
  </div>
  <br> 
  <%# iterate over categories and display links  %>
    <div class="mt-10">
      <p class="text-center text-3xl">Quick Links</p>
    </div>
    <div class='flex flex-wrap justify-center mx-auto my-6'>
      <% categories.each do |category|%>
        <div class="box-shadow px-2 py-1 m-2">
          <p class="text-lg"><%=link_to category.title, category_products_path(category), class: "hover:text-purple-800"  %></p>
        </div>
      <% end %>
    </div>
</div>

