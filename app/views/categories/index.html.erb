



<div class="container">
  <p class="heading2 text-center">Here are our product categories </p>
  <div class="hr mt-5 mb-5"></div>
  <%# (<%= @categories.length %>
  <div class="row">
    <% @categories.each do |category|%>
      <div class="col-6 col-md-4">
        <div class="card">
          <%# <%= image_tag category.product.images , class: "card-img-top" %> 
          <div class="card-body">
            <%=link_to category_products_path(category) do %>
              <%= category.title %>
               ( <%= category.products.count %> )
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>